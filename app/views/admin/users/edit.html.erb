<%= form_for [:admin, @user], method: :put do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <b>Select one :</b> <%= f.collection_select(:user_type, ['Developer', 'Manager','Admin', 'QA'], :to_s, :to_s, include_hidden: false)%>
  </p>
  <p>
    <b>Select user Activated/deactivated :</b> <%= f.collection_select(:availability, ['available','unavailable'], :to_s, :to_s, include_hidden: false)%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', admin_users_path %>
