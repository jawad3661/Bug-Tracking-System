<%= form_for [:admin, @user], method: :put do |f| %>
  <div class= 'form-group mb-3'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class= 'form-group mb-3'>
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :user_ids, 'Select User' %>
    <%= f.collection_select :user_type, user_types, :to_s, :to_s,{include_blank: true}, multiple: false, class: 'select2 form-control' %>
  </div>
  <div class= 'form-group mb-3'>
    <%= f.submit 'Update', class: 'btn btn-success' %>
    <%= link_to 'Back', admin_users_path, class: 'btn btn-primary' %>
  </div>
<% end %>


