<h1>All Users</h1>
<table class= 'table table-bordered table-striped'>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th colspan='3'>Possible Actions</th>
      <th colspan='2'>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @users.find_each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-success' %></td>
        <td><%= link_to 'Show', admin_user_path(user), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
        <td><%= user.deactivated? ? (link_to 'Enable', update_status_admin_user_path(user), method: :patch, class: 'btn btn-dark') : (link_to 'Disable', update_status_admin_user_path(user), method: :patch, class: 'btn btn-dark')%></td>
      </tr>
    <% end %>
  </tbody>
</table>
