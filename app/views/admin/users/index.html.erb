<h1 style="text-align: center;">All Users</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th , style="text-align: center;">Email</th>
      <th , style="text-align: center;">Name</th>
      <th colspan="3", style="text-align: center;">Possible Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td , style="text-align: center;"><%= user.email %></td>
        <td , style="text-align: center;"><%= user.name %></td>
        <td , style="text-align: center;"><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td , style="text-align: center;"><%= link_to 'Show', admin_user_path(user) %></td>
        <td , style="text-align: center;"><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
