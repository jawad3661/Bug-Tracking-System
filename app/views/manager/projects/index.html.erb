<%= link_to 'Create', new_manager_project_path, class: 'btn btn-xs btn-primary' %>
<p><hr></p>
<table class='table table-bordered table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Possible Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @project.find_each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Edit', edit_manager_project_path(project), class: 'btn btn-primary' %></td>
        <td><%= render 'show', project: project %></td>
        <td><%= link_to 'Delete', [:manager, project], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
